{
  "name": "Nebula Logger Dev Container",
  "context": "..",
  "dockerFile": "Dockerfile",
  "remoteUser": "root",
  "postCreateCommand": "npm ci; chmod +x scripts/dev/auto-fetch-logs.sh; chmod +x scripts/dev/devcontainer-post-start.sh",
  "postStartCommand": "./scripts/dev/devcontainer-post-start.sh",
  "mounts": [
    "source=nebula-logger-dev-npm-cache,target=/root/.npm,type=volume",
    "source=nebula-logger-dev-sf,target=/root/.sf,type=volume",
    "source=nebula-logger-dev-sfdx,target=/root/.sfdx,type=volume"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "explorer.copyRelativePathSeparator": "/",
        "explorer.fileNesting.enabled": true,
        "explorer.fileNesting.expand": false,
        "explorer.fileNesting.patterns": {
          "*.cls": "${capture}.cls-meta.xml",
          "*.page": "${capture}.page-meta.xml",
          "*.trigger": "${capture}.trigger-meta.xml",
          "*.view": "${capture}.view-meta.xml",
          "package.json": "package-lock.json"
        },
        "files.autoSave": "onFocusChange",
        "files.trimTrailingWhitespace": true,
        "gitlens.telemetry.enabled": false,
        "gitlens.views.scm.grouped.views": {
          "branches": false,
          "commits": false,
          "contributors": false,
          "launchpad": false,
          "remotes": false,
          "repositories": false,
          "searchAndCompare": false,
          "stashes": false,
          "tags": false,
          "worktrees": false
        },
        "prettier.prettierPath": "./node_modules/prettier",
        "salesforcedx-vscode-apex.java.home": "/root/.sdkman/candidates/java/current",
        "salesforcedx-vscode-core.show-cli-success-msg": false,
        "salesforcedx-vscode-core.telemetry.enabled": false,
        "telemetry.feedback.enabled": false,
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "albymor.increment-selection",
        "bibhasdn.unique-lines",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "financialforce.lana",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "gruntfuggly.todo-tree",
        "janisdd.vscode-edit-csv",
        "mechatroner.rainbow-csv",
        "mhutchie.git-graph",
        "modicatech.apex-code-coverage-visualizer",
        "ms-vscode.sublime-keybindings",
        "redhat.vscode-xml",
        "redhat.vscode-yaml",
        "salesforce.salesforcedx-vscode",
        "salesforce.sfdx-code-analyzer-vscode",
        "wmaurer.change-case"
      ]
    }
  }
}
