{
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "printWidth": 160,
    "arrowParens": "avoid",
    "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
    "overrides": [
        {
            "files": "*.{cls, apex}",
            "options": { "parser": "apex" }
        },
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "*.{md}",
            "options": { "parser": "markdown" }
        }
    ]
}
